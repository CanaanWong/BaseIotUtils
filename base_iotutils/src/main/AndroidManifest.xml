<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chtj.base_iotutils">
    <!--监听网络状态变化-->
    <application android:label="@string/app_name">
        <receiver
            android:name=".keepservice.WakeUpReceiver"
            android:process=":watch">
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
                <action android:name="com.xdandroid.hellodaemon.CANCEL_JOB_ALARM_SUB" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".keepservice.WakeUpReceiver$WakeUpAutoStartReceiver"
            android:process=":watch">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <service android:name=".keepservice.AbsWorkService$WorkNotificationService" />

        <service
            android:name=".keepservice.JobSchedulerService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:process=":watch" />

        <service
            android:name=".keepservice.WatchDogService"
            android:process=":watch" />

        <service
            android:name=".keepservice.WatchDogService$WatchDogNotificationService"
            android:process=":watch" />

    </application>
    <uses-permission android:name="android.permission.GET_TASKS" />
    <!--WIFI相关-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!--自启动-->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"></uses-permission>
    <!--文件写入权限-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!--文件读取权限-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!--网络权限-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--网络状态变化-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>
